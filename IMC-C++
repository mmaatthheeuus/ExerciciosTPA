/*Função: Calcular o imc de um aluno
  Nome: Matheus Henrique dos Santos Sousa
  Data de criação:25/09/2019
  Data de auteração:25/09/2019
*/ 

#include <iostream>

int main()
{
	float altura = 0, peso = 0, imc = 0;
	
	printf("Informe a altura do aluno: ");
	scanf("%f", &altura);
	
	printf("Informe o peso referente ao mesmo aluno: ");
	scanf("%f", &peso);
	
	imc = peso / (altura * altura);
	
	printf("O IMC deste aluno é de: %f", imc);
	return 0;
}
